<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:paddingLeft="3dip"
    android:paddingRight="3dip">

    <TableRow>
        <TextView android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_label"/>
        <EditText android:id="@+id/title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView android:id="@+id/description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_label" />
        <EditText android:id="@+id/description"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView android:id="@+id/school_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/school_label" />
        <Spinner android:id="@+id/school"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_label" />
        <Button android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_hint"
            android:onClick="showDatePickerDialog" />
    </TableRow>

    <TableRow>
        <TextView android:id="@+id/ranking_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ranking_label" />
        <Spinner android:id="@+id/ranking"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_draft"
            android:onClick="saveDraft" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_load"
            android:onClick="loadDraft" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_submit"
            android:onClick="submitReview" />
    </TableRow>

</TableLayout>
